<LPC xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:noNamespaceSchemaLocation="example.xsd">
    <Page1>
        <ContinuationSheet1>
            <!-- only one attorney block to trigger the failure -->
            <Attorney>
                <Attorney>false</Attorney>
                <ReplacementAttorney>false</ReplacementAttorney>
                <PersonToNotify>false</PersonToNotify>
                <Title>Mr</Title>
                <FirstName>John</FirstName>
                <LastName>Doe</LastName>
                <DOB>1970-01-01</DOB>
                <Address>
                    <Address1>1 Example Road</Address1>
                    <Address2>Example Town</Address2>
                    <Address3>Example County</Address3>
                    <Postcode>EX4 MPL</Postcode>
                </Address>
                <Email>john.doe@example.com</Email>
            </Attorney>
        </ContinuationSheet1>
    </Page1>

    <Page3>
        <ContinuationSheet3>
            <!-- only one Witness, triggers failure -->
            <Witnesses>
                <Signature>false</Signature>
                <FullName></FullName>
            </Witnesses>
        </ContinuationSheet3>
        <BURN></BURN>
        <PhysicalPage>invalid</PhysicalPage>
    </Page3>

    <Page4>
        <ContinuationSheet4>
            <!-- only one AuthorisedPerson triggers failure -->
            <AuthorisedPerson>
                <Signature>false</Signature>
                <FullName></FullName>
                <Date></Date>
            </AuthorisedPerson>
        </ContinuationSheet4>
        <BURN></BURN>
        <PhysicalPage>invalid</PhysicalPage>
    </Page4>
</LPC>
